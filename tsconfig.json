{
   "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "strict": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules"
   ]
}